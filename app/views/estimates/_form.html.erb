<div class='container'>
<h2>Add a New Estimate</h1>
<%= semantic_form_for @estimate, html: { class: 'form-horizontal' } do |f| %>
  <%= f.inputs do %>
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.input :label, label: 'Label', input_html: { class: 'form-control', placeholder: 'Label' } %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.input :date, as: :date_picker, label: 'Date', input_html: { class: 'form-control', placeholder: 'Date' } %>
      </div>
    </div>

    <div class="form-check">
      <div class="col-sm-10">
        <%= f.input :validated, as: :radio, label: 'Validated', label_html: { class: 'radio-inline' } %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col">
      <%= f.action :submit, as: :input, button_html: { class: 'btn btn-primary' } %>
    </div>
    <div class="col">
      <p><%= link_to 'Back to Estimates', estimates_path, class: 'btn btn-secondary' %></p>
    </div>
  </div>

<% end %>
</div>